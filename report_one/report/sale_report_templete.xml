<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_purchase_document" inherit_id="purchase.report_purchaseorder_document">
    <xpath expr="//t[@t-call='web.external_layout']" position="replace">
    <t t-call="web.basic_layout">
        <div class="header" >
                    <div class = 'col-xs-6 text-left' style="padding-top:10px">    
                             <img t-attf-src="data:image/*;base64,{{o.company_id.logo}}" />
                        </div> 

                        <div class = 'col-xs-6 text-left' style="top:800px;position:absolute;width:100%;opacity:0.25;">
                    <table style=" border:0px solid white; width:100%; font-size: 12px;" >
                        <tr>
                            <td class="text-left" style="position: absolute;
                              bottom: 48px;
                              left: 0;
                              ">
                                <br/>
                                <br/>
                              <span t-if="o.company_id.phone" >Telefono: <span t-field="o.company_id.phone"/></span><br/>
                              <t t-foreach="o.company_id" t-as="com">
                         <span t-esc="com.street"/><br/>
                         <span t-esc="com.street2"/><br/>
                         <span t-if="o.company_id.phone" >C.P.: <span t-field="o.company_id.phone"/></span>,
                         <span t-esc="com.city"/>,
                           <t t-foreach="com.state_id" t-as="st">
                            <span t-esc="st.name"/><br/>
                           </t>
                          
                    
                    <span t-if="o.company_id.email" ><span t-field="o.company_id.email"/></span> | 
                    <span t-if="o.company_id.website" ><span t-field="o.company_id.website"/></span>
                    </t><br/>
                    
              
                            </td>
                            <td class="text-right">

                             <img t-attf-src="data:image/*;base64,{{o.company_id.upload_image}}" />
                            </td>

                        </tr>

                    </table>    
                       </div> 

                    </div>
        
        
                <table class="float-right" style="border:1px solid #000000;">
                    <tr>
                        <td style="color:#FFFFFF; background:#6BBDF9; border:1px solid #000000;">
                            <strong>Orden de compra</strong>
                        </td>
                    </tr>
                    <tr>
                        <td>
                        <span>Folio:</span><span t-field="o.name"/><br/>
                        <span>Fecha:</span><span t-field="o.date_order"/>
                        </td>
                    </tr>
                </table>
            <br/><br/>
         <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
        
        <div class="page">

            <span t-esc="o.company_id.name"></span>
                <br/>
            <span>RFC:</span><span t-esc="o.company_id.vat"/>
            <br/>
          
                        <t t-foreach="o.company_id" t-as="com">
                         <span t-esc="com.street"/><br/>
                         <span t-esc="com.street2"/><br/>
                         <span >C.P.: <span t-esc="com.zip"/></span>,
                         <span t-esc="com.city"/>,
                           <t t-foreach="com.state_id" t-as="st">
                            <span t-esc="st.name"/><br/>
                           </t>
                       </t>
             <span t-if="o.company_id.phone" >Telefono: <span t-field="o.company_id.phone"/></span><br/>
            
            <br/>
            <br/>
            <span t-esc="o.partner_id.name"></span><br/>
             <t t-foreach="o.partner_id" t-as="p">
                <span t-esc="p.street"/><br/>
                <span >C.P.: <span t-esc="p.zip"/></span>,
                 <span t-esc="p.city"/>,
                           <t t-foreach="p.state_id" t-as="st">
                            <span t-esc="st.name"/><br/>
                           </t>
             </t>
              <span t-if="o.partner_id.phone" >Telefono: <span t-field="o.partner_id.phone"/></span><br/>
            <div class="oe_structure"/>

            <br/>

             <table style="font-size:14px; " class="table table-sm o_main_table">
                <thead>
                    <tr>
                        <th style="color:#FFFFFF; background:#6BBDF9; border:1px solid #000000;" class="text-right"><strong>Cantidad</strong></th>
                        <th style="color:#FFFFFF; background:#6BBDF9; border:1px solid #000000;" class="text-left">Numero de parte</th>
                        <th style="color:#FFFFFF; background:#6BBDF9; border:1px solid #000000;" class="text-left">Marca /Modelo</th>
                        <th style="color:#FFFFFF; background:#6BBDF9; border:1px solid #000000;"><strong>Description</strong></th>
                      
                        
                        
                        <th style="color:#FFFFFF; background:#6BBDF9; border:1px solid #000000;" class="text-right"><strong>Precio Unitario</strong></th>
                        <th style="color:#FFFFFF; background:#6BBDF9; border:1px solid #000000;" class="text-right"><strong>Precio Extendido</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td style=" border:1px solid #000000;" class="text-right">
                            <span t-field="line.product_qty"/>
                            <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                        </td>
                         <td style=" border:1px solid #000000;" ><span t-field="line.product_id.default_code"/></td>

                        <td style=" border:1px solid #000000;" ><span t-field="line.marca"/>/ <span t-field="line.modelo"/></td>
                        
                        <td style=" border:1px solid #000000;">
                            <span t-field="line.name"/>
                        </td>
                       
                       
                        
                        <td style=" border:1px solid #000000;" class="text-right">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td style=" border:1px solid #000000;" class="text-right">
                            <span t-field="line.price_subtotal"
                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div id="total" class="row justify-content-end">
                <div class="col-4">
                    <table class="table table-sm">
                        <tr class="border-black">
                            <td style="color:#FFFFFF; background:#6BBDF9; border:1px solid #000000;"><strong>Subtotal</strong></td>
                            <td style=" border:1px solid #000000;" class="text-right">
                                <span t-field="o.amount_untaxed"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td style="color:#FFFFFF; background:#6BBDF9; border:1px solid #000000;">Taxes</td>
                            <td style=" border:1px solid #000000;" class="text-right">
                                <span t-field="o.amount_tax"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr class="border-black o_total">
                            <td style="color:#FFFFFF; background:#6BBDF9; border:1px solid #000000;"><strong>Total</strong></td>
                            <td style=" border:1px solid #000000;" class="text-right">
                                <span t-field="o.amount_total"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="text-center" style="font-size 12px">
                 <span t-esc="o.amount_to_text"/> 
                 <br/>
            </div>
            <p t-field="o.notes"/>
             <div class="footer">
                <div class="text-center">
                <span>Atentamente</span><br/>
                <span t-esc="o.user_id.name" /><br/>
                <span t-esc="o.user_id.email" />
            </div>
            </div>
            <div class="oe_structure"/>
        </div>
    </t>
</xpath>
</template>


</odoo>
